{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "rootDirs": ["./src", "./deploy", "./test"],
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "baseUrl": ".",
    "types": ["vite/client"],
    "paths": {
      "@/*": ["src/*"]
    },
    "noImplicitAny": false,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "./deploy/*.ts", "./test/*.ts", "components.d.ts"],
  "references": [{ "path": "./tsconfig.node.json" }],
  "files": ["./hardhat.config.ts"]
}
